---
const { current = "/" } = Astro.props;
---

<header>
  <style>
    header {
      background: linear-gradient(90deg, #4299e1 0%, #805ad5 100%);
      padding: 0;
      margin-bottom: 2rem;
      box-shadow: 0 2px 12px #805ad522;
      border-bottom-left-radius: 24px;
      border-bottom-right-radius: 24px;
      position: relative;
      z-index: 2;
    }
    .nav-content {
      max-width: 1100px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.7rem 2rem;
    }
    .brand {
      color: #fff;
      font-size: 1.5rem;
      font-weight: bold;
      letter-spacing: 2px;
      text-shadow: 0 2px 8px #4299e155;
    }
    nav ul {
      display: flex;
      gap: 2.5rem;
      list-style: none;
      margin: 0;
      padding: 0;
    }
    nav a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      font-size: 1.1rem;
      padding: 0.3rem 0.8rem;
      border-radius: 8px;
      transition: background 0.2s, color 0.2s;
    }
    nav a:hover, nav a.active {
      background: #fff3;
      color: #fbb6ce;
    }
    @media (max-width: 700px) {
      .nav-content {
        flex-direction: column;
        align-items: stretch;
        padding: 0.7rem 1rem;
      }
      nav ul {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-end;
      }
    }
  </style>
  <div class="nav-content">
    <div class="nav-content">
    <nav>
        <ul>
            <li><a href="/" class={current === "/" ? "active" : ""}>Accueil</a></li>
            <li><a href="/species/Adelie" class={current === "/species/Adelie" ? "active" : ""}>Adelie</a></li>
            <li><a href="/species/Gentoo" class={current === "/species/Gentoo" ? "active" : ""}>Gentoo</a></li>
            <li><a href="/species/Chinstrap" class={current === "/species/Chinstrap" ? "active" : ""}>Chinstrap</a></li>
        </ul>
    </nav>
  </div>
  </div>
</header>